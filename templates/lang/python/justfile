# Run the project
run:
    uv run python src/{{MODULE_NAME}}/main.py

# Run with auto-reload
dev:
    fd -e py | entr -rn uv run python src/{{MODULE_NAME}}/main.py

# Run tests
test:
    uv run pytest

# Run tests continuously (on file change)
test-watch:
    fd -e py | entr -cn uv run pytest

# Add a dependency
add *packages:
    uv add {{packages}}

# Open in browser (Wayland) or copy URL to clipboard
browse:
    #!/bin/sh
    u="http://${DEV_HOST:-localhost}:${PORT:-4000}"
    printf '\e]52;c;%s\a' "$(printf '%s' "$u" | base64)" > /dev/tty
    if [ -n "$WAYLAND_DISPLAY" ]; then
        chromium --ozone-platform=wayland "$u" >/dev/null 2>&1 &
        echo "Opened browser: $u (copied to clipboard)"
    else
        echo "Copied to clipboard: $u"
    fi
