# Run the project
run:
    cargo run

# Run with auto-reload
dev:
    fd -e rs | entr -rn cargo run

# Run tests
test:
    cargo test

# Run tests continuously (on file change)
test-watch:
    fd -e rs | entr -cn cargo test

# Add a dependency
add *packages:
    cargo add {{packages}}

# Open in browser
browse:
    @u="http://${DEV_HOST:-localhost}:${PORT:-4000}"; echo "$u"; xdg-open "$u" 2>/dev/null || true
